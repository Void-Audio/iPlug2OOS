{
    "name": "iPlug2WAM",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "extensions": [
            "ms-vscode.cpptools",
            "ms-python.python",
            "ms-vscode.cmake-tools",
            "cschlosser.doxdocgen"
        ],
        "codespaces": {
            "repositories": {
                "iplug2/iplug2oos": {
                    "permissions": "write-all"
                },
                "iplug2/iplug2": {
                    "permissions": "read-all"
                }
            }
        }
    },
    "remoteEnv": {
        "AI_API_KEY": "${{ secrets.AI_API_KEY }}"
    },
    "postCreateCommand": "chmod +x scripts/* agent.py && echo 'export PATH=\"$PWD/scripts:$PATH\"' >> ~/.bashrc",
    "portsAttributes": {
        "8001": {
            "label": "emrun",
            "protocol": "https"
        }
    }
}
