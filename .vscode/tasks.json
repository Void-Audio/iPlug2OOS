{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build VST3 Debug",
            "type": "shell",
            "command": "xcodebuild",
            "args": [
                "-project",
                "${workspaceFolder}/Bloom/projects/Bloom-macOS.xcodeproj",
                "-target",
                "VST3",
                "-configuration",
                "Debug",
                "SYMROOT=$HOME/Library/Developer/Xcode/DerivedData"
            ],
            "group": "build"
        },
        {
            "label": "build AUv3 Debug",
            "type": "shell",
            "command": "xcodebuild",
            "args": [
                "-project",
                "${workspaceFolder}/Bloom/projects/Bloom-macOS.xcodeproj",
                "-target",
                "AUv3",
                "-configuration",
                "Debug",
                "SYMROOT=$HOME/Library/Developer/Xcode/DerivedData"
            ],
            "group": "build"
        },
        {
            "label": "build WAM",
            "type": "shell",
            "command": "${workspaceFolder}/Bloom/scripts/makedist-web.sh",
            "args": ["container"],
            "group": {
                "kind": "build"
            }
        }
